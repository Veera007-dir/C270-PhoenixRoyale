<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PhoenixRoyale</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
      background-color: #111;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
      overflow-x: hidden;
    }

    .navbar {
      background-color: #000 !important;
    }

    .navbar-brand,
    .navbar-nav .nav-link {
      color: #E41F24 !important;
      font-weight: bold;
    }

    .navbar-nav .nav-link:hover {
      text-decoration: underline;
    }

    h2 {
      color: #E41F24;
      margin-top: 30px;
    }

    .carousel-container {
      position: relative;
    }

    .carousel-wrapper {
      display: flex;
      overflow-x: hidden;
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
    }

    .movie-card {
      flex: 0 0 100%;
      max-width: 100%;
      scroll-snap-align: start;
      background-color: #1c1c1c;
      border-radius: 12px;
      box-shadow: 0 0 15px rgba(255, 87, 34, 0.4);
      display: flex;
      overflow: hidden;
      margin-bottom: 40px;
    }

    .movie-card img {
      width: 300px;
      object-fit: cover;
    }

    .movie-details {
      padding: 30px;
      flex-grow: 1;
    }

    .movie-title {
      color: #E41F24;
      font-size: 2rem;
      font-weight: bold;
      margin-bottom: 15px;
    }

    .movie-meta p {
      margin-bottom: 8px;
      font-size: 1rem;
    }

    .form-control {
      background-color: #333;
      color: #fff;
      border: 1px solid #444;
    }

    .form-control:focus {
      border-color: #E41F24;
    }

    .btn-primary {
      background-color: #E41F24;
      border: none;
    }

    .btn-primary:hover {
      background-color: #e64a19;
    }

    a {
      color: #E41F24;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .quantity-buy {
      display: flex;
      gap: 10px;
      align-items: center;
      margin-top: 20px;
    }

    .carousel-arrow {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: rgba(0, 0, 0, 0.5);
      color: #E41F24;
      border: none;
      font-size: 2rem;
      padding: 10px 16px;
      z-index: 10;
      cursor: pointer;
    }

    .arrow-left {
      left: 0;
    }

    .arrow-right {
      right: 0;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/phoenixroyale.png" alt="PhoenixRoyale Logo" width="32" height="32" />
        PhoenixRoyale
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/cart">View Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/upcoming">Coming Soon</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <p class="navbar-brand">Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="text-center">
      <h2>Now Showing</h2>
    </div>
    
    <div class="container mt-4">
      <div class="row mb-4">
        <div class="col-md-6">
          <input type="text" class="form-control bg-dark text-white" id="searchInput" placeholder="Search movies..." onkeyup="filterMovies()">
        </div>
        <div class="col-md-6">
          <select class="form-select bg-dark text-white" id="genreFilter" onchange="filterMovies()">
            <option value="">All Genres</option>
            <% const uniqueGenres = [...new Set(movies.map(movie => movie.genre))]; %>
            <% uniqueGenres.forEach(genre => { %>
              <option value="<%= genre %>"><%= genre %></option>
            <% }); %>
          </select>
        </div>
      </div>
    </div>
    
    <div class="container mt-4">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let i = 0; i < movies.length; i++) { %>
          <div class="col">
            <div class="card h-100 bg-dark text-white">
              <img src="images/<%= movies[i].image %>" class="card-img-top" alt="<%= movies[i].moviename %>">
              <div class="card-body">
                <h5 class="card-title text-warning"><%= movies[i].moviename %></h5>
                <p class="card-text"><strong>Genre:</strong> <%= movies[i].genre %></p>
                <p class="card-text"><strong>Rating:</strong> <%= movies[i].rating %></p>
                <p class="card-text"><strong>Price:</strong> $<%= movies[i].price.toFixed(2) %></p>
                <a href="/movie/<%= movies[i].movieId %>" class="btn btn-warning">View Details</a>
                <div class="quantity-buy">
                  <select class="form-control w-auto"
                          onchange="document.getElementById('quantity-<%= movies[i].movieId %>').value = this.value">
                    <% for (let q = 1; q <= 5; q++) { %>
                      <option value="<%= q %>"><%= q %></option>
                    <% } %>
                  </select>
                  <form action="/add-to-cart/<%= movies[i].movieId %>" method="POST" class="d-inline">
                    <input type="hidden" name="quantity" id="quantity-<%= movies[i].movieId %>" value="1">
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>

<script>
  function filterMovies() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const genreFilter = document.getElementById('genreFilter').value;
    
    document.querySelectorAll('.col').forEach(card => {
      const title = card.querySelector('.card-title').textContent.toLowerCase();
      const genre = card.querySelector('.card-text:nth-of-type(1)').textContent.split(':')[1].trim();
      
      const matchesSearch = title.includes(searchTerm);
      const matchesGenre = !genreFilter || genre === genreFilter;
      
      card.style.display = (matchesSearch && matchesGenre) ? 'block' : 'none';
    });
  }
</script>
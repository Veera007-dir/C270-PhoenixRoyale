<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #111;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
    }

    .navbar {
      background-color: #000;
    }

    .navbar-brand,
    .navbar-nav .nav-link {
      color: #E41F24 !important;
      font-weight: bold;
    }

    .navbar-nav .nav-link:hover {
      text-decoration: underline;
    }

    h2, h4 {
      color: #E41F24;
    }

    .table {
      background-color: #1c1c1c;
      color: #fff;
      border-collapse: collapse;
    }

    .table th {
      background-color: #000;
      color: #E41F24;
    }

    .table td {
      background-color: #1c1c1c;
    }

    .table-bordered > :not(caption) > * > * {
      border-width: 1px;
      border-color: #333 !important;
    }

    .text-orange {
      color: #E41F24 !important;
    }

    .btn-secondary {
      background-color: #E41F24;
      border: none;
    }

    .btn-secondary:hover {
      background-color: #e64a19;
    }

    img.img-thumbnail {
      background-color: #333;
      border: none;
    }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="/images/phoenixroyale.png" alt="PhoenixRoyale Logo" width="32" height="32" />
        PhoenixRoyale
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/browsing">Now Showing</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container mt-4">
    <h2>Shopping Cart</h2>

    <% if (cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered mt-4 text-center align-middle">
        <thead>
          <tr>
            <th>Movie</th>
            <th>Poster</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cart.length; i++) { %>
            <tr>
              <td class="text-orange"><%= cart[i].movieName || cart[i].moviename || 'Untitled' %></td>
              <td>
                <img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail">
              </td>
              <td class="text-orange"><%= cart[i].quantity %></td>
              <td class="text-orange">$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
            </tr>
            <% total += cart[i].price * cart[i].quantity; %>
          <% }; %>
        </tbody>
      </table>

      <h4 class="mt-3">Total: <span class="text-orange">$<%= total.toFixed(2) %></span></h4>

      <!-- <div class="mt-4">
        <a href="/browsing" class="btn btn-secondary">Back to Browsing</a>
      </div> -->
      <form action="/browsing" method="POST" class="mt-3">
        <button type="submit" class="btn btn-primary">Checkout</button>
      </form>

    <% } %>
  </div>
</body>
</html>
